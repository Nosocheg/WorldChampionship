<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTeamFirstFlag"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTeamFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/tvScore"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTeamFirstFlag"
        tools:text="Босния и Герцеговина" />

    <TextView
        android:id="@+id/tvGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@id/ivTeamSecondFlag"
        app:layout_constraintStart_toEndOf="@id/ivTeamFirstFlag"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Группа А" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@id/ivTeamSecondFlag"
        app:layout_constraintStart_toEndOf="@id/ivTeamFirstFlag"
        app:layout_constraintTop_toBottomOf="@id/tvGroup"
        tools:text="12.11.2022 в 10:30" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/ivTeamSecondFlag"
        app:layout_constraintStart_toEndOf="@id/ivTeamFirstFlag"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        tools:text="1:3" />

    <ImageView
        android:id="@+id/ivTeamSecondFlag"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTeamSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tvScore"
        app:layout_constraintTop_toBottomOf="@id/ivTeamSecondFlag"
        android:textAlignment="viewEnd"
        tools:text="Тринидад и Тобаго и Тобаго" />

</androidx.constraintlayout.widget.ConstraintLayout>